// That means this is a new one, so we don't need the info icon
{@if cond="( {Attribute.status_id} == 2 )"}
<td><i class="icon-plus"></i></td>
{:else}
<td> <span title="Part Information" data-content="

			<ul>
			{#Attribute.AttributesCollectible}
				{@if cond="('{Collectible.name}' !== '')"}
				<li>
				<a href='/collectibles/view/{Collectible.id}'>{Collectible.name}</a>
				</li>
				{/if}
			{:else}
				<li>Not attached to any collectibles</li>
			{/Attribute.AttributesCollectible}
			</ul>
			
			" class="popup"><i class="icon-info-sign"></i></span></td>
{/if}
<td class="category">{Attribute.AttributeCategory.path_name}</td>

<td>{Attribute.name}</td>

<td>{Attribute.description}</td>
<td>{Attribute.Manufacture.title}</td>
<td>{Attribute.Scale.scale}</td>
<td class="count">{count}</td>
<td class="user">{Revision.User.username}</td>
<td class="created">{modified}</td>
<td class="actions">
<div class="btn-group">
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#"> Action <span class="caret"></span> </a>
	<ul class="dropdown-menu">
		<li>
			<a class="link edit-attribute-collectible-link" title='Edit Collectible Part'>Edit Collectible Part</a>
			</li>
			<li><a class="link edit-attribute-link" title='Edit Part'>Edit Part</a>
		</li>
		<li>
			<a class="link remove-link" title='Remove Collectible Part'>Remove Collectible Part</a>
		</li>
		{#allowRemoveAttribute}
		<li>
			<a class="link remove-attribute" title='Remove Part'>Remove Part</a>
		</li>
		{/allowRemoveAttribute}
	</ul>
</div></td>

