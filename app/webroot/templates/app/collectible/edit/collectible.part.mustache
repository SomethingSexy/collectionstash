<div class="col-md-12">
	<div class="row">
		<div class="col-md-10">
			{@if cond="( {Attribute.status_id} == 2 )"}
			<span><i class="fa fa-plus"></i></span>
			{:else}
			<span title="Part Information" data-content="

			<ul>
			{#Attribute.AttributesCollectible}
			{@if cond="('{Collectible.name}' !== '')"}
			<li>
			<a href='/collectibles/view/{Collectible.id}'>{Collectible.name}</a>
			</li>
			{/if}
			{:else}
			<li>Not attached to any collectibles</li>
			{/Attribute.AttributesCollectible}
			</ul>

			" class="popup"><i class="fa fa-info-circle"></i></span>
			{/if}
			<span class="path">{Attribute.AttributeCategory.path_name}</span>
		</div>
		<div class="col-md-2 count">
			{{#collectible.custom}}
				<span class="label label-warning">{{attribute_collectible_type_label}}</span>
			{{/collectible.custom}}
			<span class="badge">{{count}}</span>
		</div>
	</div>

	<div class="row details">
		<div class="col-md-1">
			{{#part.AttributesUpload}}
				{{#primary}}
					<a data-gallery="gallery" href="/{{uploadDirectory}}/{{Upload.name}}" class="thumbnail">
						<img class="img-responsive" src="/{{uploadDirectory}}/{{Upload.name}}" resizetype="strict" alt="">
					</a>
				{{/primary}}
			{{/part.AttributesUpload}}
			{{^part.AttributesUpload}}
				<a target="_blank" href="" class="thumbnail"><img alt="" src="/img/no-photo.png"></a>
			{{/part.AttributesUpload}}			
		</div>
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-12">
					<span class="name">{{part.name}}</span>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					{{part.Scale.scale}}
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					{{part.description}}
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<span class="label label-default">{{data.part._label}}</span>
				</div>
			</div>
		</div>
		<div class="col-md-2">
			<div class="btn-group actions pull-right">
				<a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#"> Action <span class="caret"></span> </a>
				<ul class="dropdown-menu">
					<li>
						<a class="link edit-attribute-collectible-link" title='Edit Collectible Part'>Edit Collectible Part</a>
					</li>
					<li>
						<a class="link edit-attribute-link" title='Edit Part'>Edit Part</a>
					</li>
					<li>
						<a class="link edit-attribute-photo-link" title='Edit Part Photos'>Edit Part Photos</a>
					</li>
					<li>
						<a class="link remove-link" title='Remove Collectible Part'>Remove Part From Collectible</a>
					</li>
					{{#allowRemoveAttribute}}
					<li>
						<a class="link remove-duplicate-attribute" title='Duplicate Part'>Duplicate</a>
					</li>
					{{/allowRemoveAttribute}}
				</ul>
			</div>

		</div>

	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="pull-right">
				{{Revision.User.username}} - {{part.modified}}
			</div>
		</div>
	</div>
</div>